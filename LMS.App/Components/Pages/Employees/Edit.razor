@page "/employees/edit/{Id}"
@using LMS.App.Models
@using LMS.App.Services
@inject EmployeeService EmployeeService

@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Edit Employee</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">Edit Employee</h3>
                </div>
                <div class="card-body">
                    @if (loading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (employee == null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> Employee not found.
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@employee" OnValidSubmit="@HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="alert alert-danger" />

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="employeeCode" class="form-label">Employee Code</label>
                                    <InputText id="employeeCode" class="form-control" @bind-Value="employee.EmployeeCode" />
                                    <ValidationMessage For="@(() => employee.EmployeeCode)" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <InputText id="email" class="form-control" type="email" @bind-Value="employee.Email" />
                                    <ValidationMessage For="@(() => employee.Email)" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label">First Name</label>
                                    <InputText id="firstName" class="form-control" @bind-Value="employee.FirstName" />
                                    <ValidationMessage For="@(() => employee.FirstName)" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName" class="form-label">Last Name</label>
                                    <InputText id="lastName" class="form-control" @bind-Value="employee.LastName" />
                                    <ValidationMessage For="@(() => employee.LastName)" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="phone" class="form-label">Phone</label>
                                    <InputText id="phone" class="form-control" @bind-Value="employee.Phone" />
                                    <ValidationMessage For="@(() => employee.Phone)" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="dateOfJoining" class="form-label">Date of Joining</label>
                                    <InputDate id="dateOfJoining" class="form-control" @bind-Value="employee.DateOfJoining" />
                                    <ValidationMessage For="@(() => employee.DateOfJoining)" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="department" class="form-label">Department</label>
                                    <InputSelect id="department" class="form-select" @bind-Value="employee.Department">
                                        <option value="">Select Department</option>
                                        <option value="IT">IT</option>
                                        <option value="Mobile">Mobile</option>
                                        <option value="DotNet">.NET</option>
                                        <option value="Database">Database</option>
                                        <option value="SSIS">SSIS</option>
                                        <option value="QA">QA</option>
                                    </InputSelect>
                                    <ValidationMessage For="@(() => employee.Department)" />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="designation" class="form-label">Designation</label>
                                    <InputText id="designation" class="form-control" @bind-Value="employee.Designation" />
                                    <ValidationMessage For="@(() => employee.Designation)" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="managerId" class="form-label">Manager</label>
                                    <InputSelect id="managerId" class="form-select" @bind-Value="employee.ManagerId">
                                        <option value="">Select Manager</option>
                                        @if (managers != null)
                                        {
                                            @foreach (var manager in managers.Where(m => m.Id != employee.Id))
                                            {
                                                <option value="@manager.Id">@manager.FullName (@manager.EmployeeCode)</option>
                                            }
                                        }
                                    </InputSelect>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-check mt-4">
                                        <InputCheckbox id="isActive" class="form-check-input" @bind-Value="employee.IsActive" />
                                        <label class="form-check-label" for="isActive">
                                            Is Active
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary" disabled="@saving">
                                    @if (saving)
                                    {
                                        <span class="spinner-border spinner-border-sm" role="status"></span>
                                        <span>Saving...</span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-save"></i>
                                        <span>Update Employee</span>
                                    }
                                </button>
                                <button type="button" class="btn btn-secondary" @onclick="NavigateBack">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Id { get; set; } = string.Empty;
    
    private Employee? employee;
    private List<Employee>? managers;
    private bool loading = true;
    private bool saving = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            employee = await EmployeeService.GetByIdAsync(Id);
            managers = await EmployeeService.GetManagersAsync();
        }
        catch (Exception ex)
        {
            // Handle error silently during prerendering, will show in UI
            employee = null;
        }
        finally
        {
            loading = false;
        }
    }

    private async Task HandleValidSubmit()
    {
        if (employee == null) return;

        saving = true;
        try
        {
            // Check if employee code is unique (excluding current employee)
            var isUnique = await EmployeeService.IsEmployeeCodeUniqueAsync(employee.EmployeeCode, employee.Id);
            if (!isUnique)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Employee code already exists. Please use a different code.");
                return;
            }

            await EmployeeService.UpdateAsync(Id, employee);
            await JSRuntime.InvokeVoidAsync("alert", "Employee updated successfully!");
            Navigation.NavigateTo("/employees");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error updating employee: {ex.Message}");
        }
        finally
        {
            saving = false;
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/employees");
    }
}
