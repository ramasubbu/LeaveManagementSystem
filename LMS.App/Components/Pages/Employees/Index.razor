@page "/employees"
@using LMS.App.Models
@using LMS.App.Services
@inject EmployeeService EmployeeService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Employee Management</PageTitle>
<AuthCheck />
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Employee Management</h3>
                    <button class="btn btn-primary" @onclick="NavigateToAdd">
                        <i class="fas fa-plus"></i> Add Employee
                    </button>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search employees..." @bind="searchTerm" @onkeypress="OnSearchKeyPress" />
                                <button class="btn btn-outline-secondary" type="button" @onclick="SearchEmployees">
                                    <i class="fas fa-search"></i>
                                </button>
                                <button class="btn btn-outline-secondary" type="button" @onclick="LoadEmployees">
                                    <i class="fas fa-refresh"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                                <select class="form-select" @bind="selectedManagerId" @bind:after="FilterByManager">
                                    <option value="">All Managers</option>
                                    <option value="no-manager">No Manager</option>
                                    @if (managers != null)
                                    {
                                        @foreach (var manager in managers)
                                        {
                                            <option value="@manager.Id">@manager.FullName (@manager.EmployeeCode)</option>
                                        }
                                    }
                                </select>
                                <button class="btn btn-outline-info" type="button" @onclick="ClearFilters">
                                    <i class="fas fa-times"></i> Clear
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (loading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (employees == null || !employees.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No employees found.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Employee Code</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Department</th>
                                        <th>Designation</th>
                                        <th>Date of Joining</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in employees)
                                    {
                                        <tr>
                                            <td>@employee.EmployeeCode</td>
                                            <td>@employee.FullName</td>
                                            <td>@employee.Email</td>
                                            <td>@employee.Department</td>
                                            <td>@employee.Designation</td>
                                            <td>@employee.DateOfJoining.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => NavigateToEdit(employee.Id)">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-info" @onclick="() => NavigateToDetails(employee.Id)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteEmployee(employee.Id, employee.FullName)">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Employee>? employees;
    private List<Employee>? allEmployees;
    private List<Employee>? managers;
    private string searchTerm = string.Empty;
    private string selectedManagerId = string.Empty;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadEmployees();
        await LoadManagers();
    }

    private async Task LoadEmployees()
    {
        loading = true;
        try
        {
            allEmployees = await EmployeeService.GetAllAsync();
            employees = allEmployees;
            await ApplyFilters();
        }
        catch (Exception ex)
        {
            // Handle error silently during prerendering
            allEmployees = new List<Employee>();
            employees = new List<Employee>();
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadManagers()
    {
        try
        {
            managers = await EmployeeService.GetManagersAsync();
        }
        catch (Exception ex)
        {
            // Handle error silently during prerendering
            managers = new List<Employee>();
        }
    }

    private async Task SearchEmployees()
    {
        await ApplyFilters();
    }

    private async Task FilterByManager()
    {
        await ApplyFilters();
    }

    private async Task ClearFilters()
    {
        searchTerm = string.Empty;
        selectedManagerId = string.Empty;
        await ApplyFilters();
    }

    private async Task ApplyFilters()
    {
        if (allEmployees == null)
            return;

        loading = true;
        try
        {
            var filteredEmployees = allEmployees.AsEnumerable();

            // Apply search filter
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                filteredEmployees = filteredEmployees.Where(e =>
                    e.FirstName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    e.LastName.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    e.EmployeeCode.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    e.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                    e.Department.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
                );
            }

            // Apply manager filter
            if (!string.IsNullOrWhiteSpace(selectedManagerId))
            {
                if (selectedManagerId == "no-manager")
                {
                    filteredEmployees = filteredEmployees.Where(e => string.IsNullOrEmpty(e.ManagerId));
                }
                else
                {
                    filteredEmployees = filteredEmployees.Where(e => e.ManagerId == selectedManagerId);
                }
            }

            employees = filteredEmployees.ToList();
        }
        catch (Exception ex)
        {
            // Handle error silently
            employees = allEmployees ?? new List<Employee>();
        }
        finally
        {
            loading = false;
        }
    }

    private async Task OnSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchEmployees();
        }
    }

    private void NavigateToAdd()
    {
        Navigation.NavigateTo("/employees/add");
    }

    private void NavigateToEdit(string id)
    {
        Navigation.NavigateTo($"/employees/edit/{id}");
    }

    private void NavigateToDetails(string id)
    {
        Navigation.NavigateTo($"/employees/details/{id}");
    }

    private async Task DeleteEmployee(string id, string name)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete employee '" + name + "'?");
        if (confirmed)
        {
            try
            {
                await EmployeeService.DeleteAsync(id);
                await LoadEmployees();
                await JSRuntime.InvokeVoidAsync("alert", "Employee deleted successfully!");
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting employee: {ex.Message}");
            }
        }
    }
}
