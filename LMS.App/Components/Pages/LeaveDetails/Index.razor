@page "/leave-details"
@using LMS.App.Models
@using LMS.App.Services
@inject EmployeeLeaveDetailsService LeaveDetailsService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Leave Management</PageTitle>
<AuthCheck />
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Employee Leave Management</h3>
                    <button class="btn btn-primary" @onclick="NavigateToAdd">
                        <i class="fas fa-plus"></i> Apply Leave
                    </button>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search leaves..." @bind="searchTerm" @onkeypress="OnSearchKeyPress" />
                                <button class="btn btn-outline-secondary" type="button" @onclick="SearchLeaves">
                                    <i class="fas fa-search"></i>
                                </button>
                                <button class="btn btn-outline-secondary" type="button" @onclick="LoadLeaveDetails">
                                    <i class="fas fa-refresh"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="btn-group" role="group">
                                <button class="btn @(selectedStatus == null ? "btn-primary" : "btn-outline-primary")" @onclick="() => FilterByStatus(null)">
                                    All
                                </button>
                                <button class="btn @(selectedStatus == LeaveStatus.Pending ? "btn-warning" : "btn-outline-warning")" @onclick="() => FilterByStatus(LeaveStatus.Pending)">
                                    Pending
                                </button>
                                <button class="btn @(selectedStatus == LeaveStatus.Approved ? "btn-success" : "btn-outline-success")" @onclick="() => FilterByStatus(LeaveStatus.Approved)">
                                    Approved
                                </button>
                                <button class="btn @(selectedStatus == LeaveStatus.Rejected ? "btn-danger" : "btn-outline-danger")" @onclick="() => FilterByStatus(LeaveStatus.Rejected)">
                                    Rejected
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (loading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    }
                    else if (leaveDetails == null || !leaveDetails.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No leave records found.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Employee</th>
                                        <th>Leave Type</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Days</th>
                                        <th>Reason</th>
                                        <th>Status</th>
                                        <th>Applied Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var leave in leaveDetails)
                                    {
                                        <tr>
                                            <td>
                                                @if (leave.Employee != null)
                                                {
                                                    <div>
                                                        <strong>@leave.Employee.FullName</strong><br>
                                                        <small class="text-muted">@leave.Employee.EmployeeCode</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-warning">Employee not found</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@leave.LeaveType</span>
                                            </td>
                                            <td>@leave.StartDate.ToString("yyyy-MM-dd")</td>
                                            <td>@leave.EndDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <span class="badge bg-secondary">@leave.TotalDays</span>
                                            </td>
                                            <td>
                                                @if (leave.Reason.Length > 50)
                                                {
                                                    <span title="@leave.Reason">@leave.Reason.Substring(0, 47)...</span>
                                                }
                                                else
                                                {
                                                    @leave.Reason
                                                }
                                            </td>
                                            <td>
                                                @switch (leave.Status)
                                                {
                                                    case LeaveStatus.Pending:
                                                        <span class="badge bg-warning">Pending</span>
                                                        break;
                                                    case LeaveStatus.Approved:
                                                        <span class="badge bg-success">Approved</span>
                                                        break;
                                                    case LeaveStatus.Rejected:
                                                        <span class="badge bg-danger">Rejected</span>
                                                        break;
                                                    case LeaveStatus.Cancelled:
                                                        <span class="badge bg-secondary">Cancelled</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@leave.AppliedDate.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-info" @onclick="() => NavigateToDetails(leave.Id)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    @if (leave.Status == LeaveStatus.Pending)
                                                    {
                                                        <button class="btn btn-sm btn-outline-primary" @onclick="() => NavigateToEdit(leave.Id)">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-success" @onclick="@(() => ApproveLeave(leave.Id, leave.Employee?.FullName ?? "Unknown"))">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-outline-danger" @onclick="@(() => RejectLeave(leave.Id, leave.Employee?.FullName ?? "Unknown"))">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    }
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="@(() => DeleteLeave(leave.Id, leave.Employee?.FullName ?? "Unknown"))">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<EmployeeLeaveDetails>? leaveDetails;
    private string searchTerm = string.Empty;
    private bool loading = true;
    private LeaveStatus? selectedStatus = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadLeaveDetails();
    }

    private async Task LoadLeaveDetails()
    {
        loading = true;
        try
        {
            leaveDetails = await LeaveDetailsService.GetAllAsync();
        }
        catch (Exception ex)
        {
            // Handle error silently during prerendering
            leaveDetails = new List<EmployeeLeaveDetails>();
        }
        finally
        {
            loading = false;
        }
    }

    private async Task FilterByStatus(LeaveStatus? status)
    {
        selectedStatus = status;
        loading = true;
        try
        {
            if (status == null)
            {
                leaveDetails = await LeaveDetailsService.GetAllAsync();
            }
            else
            {
                leaveDetails = await LeaveDetailsService.GetByStatusAsync(status.Value);
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error filtering leaves: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task SearchLeaves()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            await LoadLeaveDetails();
            return;
        }

        loading = true;
        try
        {
            leaveDetails = await LeaveDetailsService.SearchAsync(searchTerm);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error searching leaves: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task OnSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchLeaves();
        }
    }

    private void NavigateToAdd()
    {
        Navigation.NavigateTo("/leave-details/add");
    }

    private void NavigateToEdit(string id)
    {
        Navigation.NavigateTo($"/leave-details/edit/{id}");
    }

    private void NavigateToDetails(string id)
    {
        Navigation.NavigateTo($"/leave-details/details/{id}");
    }

    private async Task ApproveLeave(string id, string employeeName)
    {
        var comments = await JSRuntime.InvokeAsync<string>("prompt", "Enter approval comments (optional):");
        if (comments != null) // User didn't cancel
        {
            try
            {
                await LeaveDetailsService.ApproveLeaveAsync(id, "Admin", comments);
                await LoadLeaveDetails();
                await JSRuntime.InvokeVoidAsync("alert", $"Leave approved for {employeeName}!");
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error approving leave: {ex.Message}");
            }
        }
    }

    private async Task RejectLeave(string id, string employeeName)
    {
        var comments = await JSRuntime.InvokeAsync<string>("prompt", "Enter rejection reason:");
        if (!string.IsNullOrEmpty(comments))
        {
            try
            {
                await LeaveDetailsService.RejectLeaveAsync(id, "Admin", comments);
                await LoadLeaveDetails();
                await JSRuntime.InvokeVoidAsync("alert", $"Leave rejected for {employeeName}!");
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error rejecting leave: {ex.Message}");
            }
        }
    }

    private async Task DeleteLeave(string id, string employeeName)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete this leave record for '{employeeName}'?");
        if (confirmed)
        {
            try
            {
                await LeaveDetailsService.DeleteAsync(id);
                await LoadLeaveDetails();
                await JSRuntime.InvokeVoidAsync("alert", "Leave record deleted successfully!");
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error deleting leave record: {ex.Message}");
            }
        }
    }
}
